generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  service   String   @map("service_type")
  date      DateTime
  time      String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("bookings")
}
